<Window x:Class="DbBackuper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Backuper" Height="593" Width="544">
    <StackPanel Loaded="Grid_Loaded_1">
       
        <Label x:Name="lbDatabase" Content="Database" FontSize="16" FontWeight="Bold"  FontFamily="DejaVu Sans Mono"/>
        <ComboBox x:Name="cmbDatabases" 
                  SelectionChanged="cmbDatabases_SelectionChanged" 
                  Margin="20 5 20 5" 
                  />
        <Label x:Name="lbTables" Content="Tables" FontSize="16" FontWeight="Bold" FontFamily="DejaVu Sans Mono"/>
        <ListBox x:Name="lstTables" ItemsSource="{Binding Tables}" Margin="20,5" Height="406" >
            <ListBox.ItemTemplate>
                <HierarchicalDataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}"/>
                </HierarchicalDataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid Height="40">
            <Button Content="Next" Margin="442,0,22,0" />
        </Grid>
    </StackPanel>
</Window>
