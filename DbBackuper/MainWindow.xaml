<Window x:Class="DbBackuper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Backuper" Height="593" Width="790">
    <Grid Loaded="Grid_Loaded_1">
        <ComboBox x:Name="cmbDatabases" 
                  HorizontalAlignment="Left" 
                  Margin="124,22,0,0" 
                  VerticalAlignment="Top" 
                  Width="229" SelectionChanged="cmbDatabases_SelectionChanged"
                  />
        <Label x:Name="lbDatabase" Content="Database" HorizontalAlignment="Left" Margin="19,15,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.125,-0.12" FontSize="16" FontWeight="Bold"/>
        <Label HorizontalAlignment="Left" Margin="19,71,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbTables" Content="Tables" HorizontalAlignment="Left" Margin="19,52,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <ListBox ItemsSource="{Binding TopicList}" Height="352" HorizontalAlignment="Left" Margin="124,52,0,0" Name="listTopics" VerticalAlignment="Top" Width="615" Background="#0B000000">
            <ListBox.ItemTemplate>
                <HierarchicalDataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}"/>
                </HierarchicalDataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
